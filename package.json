{
  "name": "it-helpdesk-simulator",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.0",
    "eslint": "^8.48.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "npm@10.2.4",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
