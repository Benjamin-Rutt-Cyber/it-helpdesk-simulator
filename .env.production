# Production Environment Configuration
NODE_ENV="production"

# Database Configuration - Use production database with connection pooling
DATABASE_URL="postgresql://prod_user:secure_prod_password@your-prod-db-host:5432/it_helpdesk_simulator_prod?connection_limit=20&pool_timeout=20"

# Authentication - Use highly secure production keys
NEXTAUTH_SECRET="generate-highly-secure-64-char-secret-for-production"
NEXTAUTH_URL="https://your-domain.com"
JWT_SECRET="generate-highly-secure-jwt-secret-for-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration - Use production email service
SMTP_HOST="your-production-smtp-host"
SMTP_PORT="587"
SMTP_USER="noreply@your-domain.com"
SMTP_PASS="secure-production-email-password"
EMAIL_FROM="noreply@your-domain.com"

# OpenAI API Configuration
OPENAI_API_KEY="your-production-openai-api-key"

# API Configuration
API_URL="https://api.your-domain.com"
FRONTEND_URL="https://your-domain.com"
PORT=3001

# Redis Configuration - Use production Redis cluster
REDIS_URL="redis://your-prod-redis-host:6379"
REDIS_HOST="your-prod-redis-host"
REDIS_PORT="6379"

# Security Configuration
CORS_ORIGINS="https://your-domain.com,https://www.your-domain.com"
ENABLE_HELMET="true"
FORCE_HTTPS="true"

# Performance Configuration
ENABLE_COMPRESSION="true"
CACHE_TTL="3600"

# Monitoring and Logging
LOG_LEVEL="warn"
ENABLE_DETAILED_LOGGING="false"
DATADOG_API_KEY="your-datadog-api-key"
SENTRY_DSN="your-sentry-dsn"

# Rate Limiting - More restrictive for production
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="60"