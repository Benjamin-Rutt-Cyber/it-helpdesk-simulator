# Staging Environment Configuration
NODE_ENV="staging"

# Database Configuration - Use staging database
DATABASE_URL="postgresql://staging_user:staging_password@your-staging-db-host:5432/it_helpdesk_simulator_staging"

# Authentication - Use secure staging keys
NEXTAUTH_SECRET="generate-secure-32-char-secret-for-staging"
NEXTAUTH_URL="https://staging.your-domain.com"
JWT_SECRET="generate-secure-jwt-secret-for-staging"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration - Use staging email service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="staging@your-domain.com"
SMTP_PASS="staging-email-password"
EMAIL_FROM="noreply-staging@your-domain.com"

# OpenAI API Configuration
OPENAI_API_KEY="your-openai-api-key-here"

# API Configuration
API_URL="https://api-staging.your-domain.com"
FRONTEND_URL="https://staging.your-domain.com"
PORT=3001

# Redis Configuration - Use staging Redis
REDIS_URL="redis://your-staging-redis-host:6379"
REDIS_HOST="your-staging-redis-host"
REDIS_PORT="6379"

# Monitoring and Logging
LOG_LEVEL="info"
ENABLE_DETAILED_LOGGING="true"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"